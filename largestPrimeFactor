#method to check if a number is a prime number or not


def isPrime(num):
    if num==0:
        return "Please enter a valid integer"
    if num==1:
        return "1 is neither prime and composite.Please enter an integer greater than 2"
    for i in xrange(2,num):
        if num%i==0:
            return False
    return True
    
    
#method to find all the factors

def factOFNum(n):
    list1 = []
    for i in xrange(1,n+1):
        if n%i==0:
            list1.append(i)
    return list1
    
#method to find the largest prime factor

def largestPrimeFactor(m):
    list2 = []
    while m>1:
        ad1 = factOFNum(m)
        for ele in ad1:
            if isPrime(ele)==True:
                list2.append(ele)
        return max(list2)

#applicable only for a 8 bit integer
print largestPrimeFactor(25599371)
